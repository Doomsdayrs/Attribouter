<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AttribouterTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AttribouterTheme.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AttribouterTheme.Dialog.Fullscreen" parent="AttribouterTheme">
        <item name="android:windowAnimationStyle">@style/AttribouterTheme.SlideAnimation</item>
    </style>

    <style name="AttribouterTheme.SlideAnimation">
        <item name="android:windowEnterAnimation">@anim/attribouter_slide_in</item>
        <item name="android:windowExitAnimation">@anim/attribouter_slide_out</item>
    </style>

</resources>